def recieve_file:
    s = socket.socket(socket.AF_INET,socket.SOCK_STREAM)
    fromip = input('input the ip from the sender:')
    s.bind((fromip,12345))

    recvfile = input('file name:')
    f=open(recvfile,'wb')

    while True:
        data = s.recv(1024)
        while data:
            f.write(data)
            data = s.recv(1024)
        f.close()
        break
    print('done recieving..)
